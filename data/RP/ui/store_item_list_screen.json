                    "title": {
                      "type": "label",
                      "size": [ "100%", 10 ],
                      "text": "#title_label",
                      "color": "$body_text_color",
                      "font_type": "smooth",
                      "layer": 1,
                      "bindings": [
                        {
                          "binding_type": "collection",
                          "binding_collection_name": "list_collection",
                          "binding_name": "#title_label"
                        }
                      ]
                    }
