                        {
                          "binding_type": "collection",
                          "binding_name": "(not #progress_visible)",
                          "binding_collection_name": "list_collection",
                          "binding_name_override": "#visible"
                        }
                      ],
                      "controls": [
                        {
                          "rating_text_panel@common_store.rating_text_panel": {
                            "$category_collection": "",
