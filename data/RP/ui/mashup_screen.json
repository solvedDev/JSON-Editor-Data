          ],
          "bindings": [
            {
              "binding_name": "#progress_loading_anim_visible",
              "binding_name_override": "#visible"
            }
          ]
        }
      },
      {
        "author_panel": {
          "type": "panel",
          "size": [ "100%", "100%c" ],
          "controls": [
            {
              "author_label": {
                "type": "label",
                "size": [ "100% - 2px", "default" ],
                "offset": [ 2, 0 ],
                "layer": 1,
                "color": "$body_text_color",
                "font_type": "smooth",
                "text": "#author_label",
                "bindings": [
                  {
                    "binding_name": "#author_label",
                    "binding_condition": "once"
                  }
                ]
              }
            }
          ]
        }
      },
      { "pad@mashup.vertical_padding_2px": {} },
      {
        "description_panel": {
          "type": "panel",
          "size": [ "100%", "fill" ],
          "controls": [
            {
              "contents_description": {
                "type": "label",
                "size": [ "100% - 2px", "100%" ],
                "offset": [ 2, 0 ],
                "layer": 1,
                "color": "$body_text_color",
                "font_type": "smooth",
                "text": "#pack_description",
                "notify_on_ellipses": [
                  "read_more_button_text",
